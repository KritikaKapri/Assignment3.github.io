{
    "compilerOptions": {
      "target": "ES2018",
      "module": "ES2015",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./scripts",
      "sourceMap": true,
      "lib": ["ES2018", "DOM"]
    },
    "include": ["./scripts/**/*"],
    "exclude": ["node_modules"]
  }